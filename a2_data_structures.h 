#ifndef A2_DATA_STRUCTURES_H
#define A2_DATA_STRUCTURES_H

typedef struct NodeInfo {
    char name[20];
    char ip[20];
    struct NodeInfo *next;
} NodeInfo;

typedef struct InvalidNode {
    char name[20];
    struct InvalidNode *next;
} InvalidNode;

typedef struct LinkInfo {
    char src[20];
    char dst[20];
    int cost;
    int bandwidth;
    struct LinkInfo *next;
} LinkInfo;

typedef struct RouteEntry {
    char src[20];
    char dst[20];
    char nextHop[20];
    int cost;
    struct RouteEntry *next;
} RouteEntry;

typedef struct Packet {
    char src[20];
    char dst[20];
    int size;
    struct Packet *next;
} Packet;

#endif
